<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <import type="com.example.viwiki.network.ApiUtils.ApiStatus" />


        <variable
            name="viewModel"
            type="com.example.viwiki.search.SearchViewModel" />
    </data>

    <FrameLayout
        android:id="@+id/search_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".search.SearchFragment">

        <LinearLayout
            android:id="@+id/tv_info_screen"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            app:status="@{viewModel.status}"
            android:visibility="visible"
            tools:visibility="visible">

            <TextView
                android:id="@+id/tv_info_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{viewModel.infoMessageRes}"
                android:textAlignment="center"
                android:textSize="@dimen/header2_size"
                tools:text="There was an error" />

            <Button
                android:id="@+id/btn_refresh"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:status="@{viewModel.status}"
                android:text="try again"
                android:visibility="invisible"
                tools:visibility="visible"/>

        </LinearLayout>


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_view_results"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:scrollbars="vertical"
            android:visibility="@{viewModel.searchResponse.query.searchInfo.totalHits == 0 ? View.GONE : View.VISIBLE}"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            tools:visibility="gone" />

    </FrameLayout>
</layout>
