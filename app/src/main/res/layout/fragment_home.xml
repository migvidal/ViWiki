<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <import type="com.example.viwiki.home.HomeViewModel.WikiMediaApiStatus" />

        <variable
            name="viewModel"
            type="com.example.viwiki.home.HomeViewModel" />
    </data>

    <FrameLayout
        android:id="@+id/home_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/tv_info_screen"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="@{viewModel.status == WikiMediaApiStatus.DONE ? View.GONE : View.VISIBLE}"
            tools:visibility="visible">

            <ProgressBar
                android:id="@+id/progress_bar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="@{viewModel.status == WikiMediaApiStatus.LOADING ? View.VISIBLE : View.GONE}"/>

            <TextView
                android:id="@+id/tv_info_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{viewModel.infoMessageRes}"
                android:textAlignment="center"
                android:textSize="@dimen/header2_size"
                tools:text="There was an error" />

            <Button
                android:id="@+id/btn_refresh"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="try again"
                android:visibility="@{viewModel.status == WikiMediaApiStatus.LOADING ? View.GONE : View.VISIBLE}" />

        </LinearLayout>


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="@{viewModel.status == WikiMediaApiStatus.DONE ? View.VISIBLE : View.GONE}"
            tools:context=".HomeFragment">

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_featured"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                app:cardElevation="4dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/image_featured"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:adjustViewBounds="true"
                        android:scaleType="centerCrop"
                        app:layout_constraintDimensionRatio="4:3"
                        app:imageUrl="@{viewModel.featuredArticleResponse.tfa.thumbnail.source}"
                        app:layout_constraintTop_toTopOf="parent"
                        tools:src="@drawable/ic_launcher_background"/>

                    <TextView
                        android:id="@+id/tv_header"
                        style="@style/tapered_box"
                        android:layout_width="wrap_content"
                        android:layout_marginTop="@dimen/margin_small"
                        android:text="@string/header_text"
                        android:textAllCaps="true"
                        android:textSize="16sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/image_featured" />

                    <TextView
                        android:id="@+id/tv_title"
                        style="@style/tapered_box"
                        android:layout_width="wrap_content"
                        android:text="@{viewModel.featuredArticleResponse.tfa.normalizedTitle}"
                        android:textSize="@dimen/header2_size"
                        android:textStyle="bold"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tv_header"
                        tools:text="Lorem ipsum portaest molestie" />


                    <TextView
                        android:id="@+id/tv_definition"
                        style="@style/tapered_box"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@{viewModel.featuredArticleResponse.tfa.extract}"
                        android:textSize="@dimen/emphasized_size"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tv_title"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:lines="2"
                        android:ellipsize="middle"
                        android:layout_marginBottom="@dimen/margin_large"
                        tools:text="Amet magna dolor elementum nec fusce mi quisque molestie portaest molestie massa proin eu erat maecenas id molestie nec vivamus congue consectetur maecenas purus quisque." />

                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.google.android.material.card.MaterialCardView>
        </ScrollView>
    </FrameLayout>

</layout>
