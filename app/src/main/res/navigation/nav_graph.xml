<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/navigation"
    app:startDestination="@id/todayFragment">

    <fragment
        android:id="@+id/todayFragment"
        android:name="com.example.viwiki.domain.today.TodayFragment"
        android:label="@string/app_name">
        <action
            android:id="@+id/action_todayFragment_to_articleFragment"
            app:destination="@id/pageFragment"
            app:enterAnim="@android:anim/fade_in"
            app:exitAnim="@android:anim/fade_out"
            app:popEnterAnim="@android:anim/fade_in"
            app:popExitAnim="@android:anim/fade_out" />
        <action
            android:id="@+id/action_todayFragment_to_aboutFragment"
            app:destination="@id/aboutFragment"
            app:enterAnim="@anim/nav_default_enter_anim" />
        <action
            android:id="@+id/action_todayFragment_to_savedFragment"
            app:destination="@id/savedFragment" />
    </fragment>
    <fragment
        android:id="@+id/pageFragment"
        android:name="com.example.viwiki.domain.page.PageFragment">
        <argument
            android:name="arg_article_title"
            android:defaultValue=""
            app:argType="string" />
    </fragment>
    <fragment
        android:id="@+id/aboutFragment"
        android:name="com.example.viwiki.AboutFragment"
        android:label="AboutFragment" />
    <fragment
        android:id="@+id/savedFragment"
        android:name="com.example.viwiki.domain.saved.SavedFragment"
        android:label="SavedFragment" />
</navigation>